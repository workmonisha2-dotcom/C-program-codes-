#include <stdio.h>
#include <string.h>

int main() {
    char fname[50], ch;
    FILE *fp;
    int chars = 0, words = 0, lines = 1;  // start with 1 line
    int prevSpace = 1;

    printf("Enter file name: ");
    scanf("%s", fname);

    fp = fopen(fname, "r");
    if (!fp) {
        printf("File cannot be opened!\n");
        return 0;
    }

    while ((ch = fgetc(fp)) != EOF) {
        chars++;

        if (ch == '\n') {
            lines++;
            prevSpace = 1;
        } else if (ch == ' ' || ch == '\t') {
            prevSpace = 1;
        } else {
            if (prevSpace == 1) {
                words++;
            }
            prevSpace = 0;
        }
    }

    fclose(fp);

    printf("\nFile: %s\n", fname);
    printf("Characters = %d\nWords = %d\nLines = %d\n", chars, words, lines);
    return 0;
}
